@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}

<div>
    <hr />
    <dl class="row">

        

        <section class="container">
            <h1 class="mb-4">@Model.FullName</h1>

            @if (Model.ImageLocation == null)
            {
                <img style="width:100px;float:left;margin-right:20px"
                     src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg" />
            }
            else
            {
                <img style="width:100px;float:left;margin-right:20px"
                     src="@Model.ImageLocation" />
            }
            <div>
                <label class="font-weight-bold">Display Name:</label>
                <span>@Model.DisplayName</span>
            </div>
            <div>
                <label class="font-weight-bold">Email:</label>
                <span>@Model.Email</span>
            </div>
            <div>
                <label class="font-weight-bold">Creation Date:</label>
                <span>@Model.CreateDateTime</span>
            </div>
            <div>
                <label class="font-weight-bold">User Profile Type:</label>
                <span>@Model.UserType.Name</span>
            </div>
        </section>

        
</div>
<div>
